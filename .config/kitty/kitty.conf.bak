# Disable ALL default keybindings
clear_all_shortcuts yes
# Perf
repaint_delay 5
input_delay 1
sync_to_monitor yes

# Fonts
font_family      Maple Mono
bold_font        auto
italic_font      auto
bold_italic_font auto
font_size        15.0

# leader = Ctrl+B multi-key mappings
# Close current tab when you press Ctrl+B then x
map ctrl+b>x close_tab

map ctrl+b>c new_tab 
# Jump to specific tabs with Ctrl+B then <number>
map ctrl+b>1 goto_tab 1
# (optional handy extras)
map ctrl+b>2 goto_tab 2
map ctrl+b>3 goto_tab 3
map ctrl+b>4 goto_tab 4
map ctrl+b>5 goto_tab 5
map ctrl+b>6 goto_tab 6
map ctrl+b>7 goto_tab 7
map ctrl+b>8 goto_tab 8
map ctrl+b>9 goto_tab 9
# map Ctrl+B then 0 -> tab 10
map ctrl+b>0 goto_tab 10

# Zoom
map ctrl+shift+equal change_font_size all +2
map ctrl+shift+minus change_font_size all -2
map ctrl+shift+backspace change_font_size all 0


# Copy / Paste (keep default behavior)
map ctrl+shift+c copy_to_clipboard
map ctrl+shift+v paste_from_clipboard


# Show tab index then a truncated title, e.g. "1 my-shell"
tab_title_max_length 24
tab_title_template "{index} {title[:{max_title_length}]}"



# Cursor style
# cursor_shape block       # makes the cursor a solid block
# cursor_blink_interval 0  # optional: set to 0 to disable blinking

# ----------------------------
# Disable quit confirmation
# ----------------------------
confirm_quit no          # kitty won't ask when quitting


# Block cursor
cursor_shape block
# cursor none
shell_integration no-cursor
cursor_blink_interval 0

# Appearance
# Match Alacritty background handling
background_opacity 1.0

# Reduce Kitty's aggressive antialias brightness
font_features none



background_opacity 0.8
window_padding_width 2
#--------END


# BEGIN_KITTY_THEME
# Everforest Dark Soft
include current-theme.conf
# END_KITTY_THEME
#
# --- ultra-dim overrides ---
background #111111
foreground #dddddd

color7  #b8b8b8
color15 #d0d0d0

cursor #888888
cursor_text_color #161821
